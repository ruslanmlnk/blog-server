{
  "name": "",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation\" next build --webpack",
    "dev": "cross-env PORT=3001 next dev --webpack",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env PORT=3001  NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@faceless-ui/modal": "3.0.0",
    "@faceless-ui/scroll-info": "2.0.0",
    "@payloadcms/db-postgres": "3.67.0",
    "@payloadcms/next": "^3.67.0",
    "@payloadcms/payload-cloud": "3.67.0",
    "@payloadcms/richtext-lexical": "^3.67.0",
    "@payloadcms/ui": "3.67.0",
    "cross-env": "^10.1.0",
    "dotenv": "17.2.3",
    "graphql": "^16.12.0",
    "jsdom": "27.3.0",
    "mammoth": "^1.11.0",
    "monaco-editor": "^0.55.1",
    "next": "^16.0.8",
    "payload": "^3.67.0",
    "payload-lexical-typography": "^0.5.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sharp": "0.34.5",
    "word-extractor": "^1.0.4",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "16.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.8",
    "playwright": "1.57.0",
    "playwright-core": "1.57.0",
    "prettier": "^3.7.4",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.15"
  },
  "overrides": {
    "lexical": "0.35.0",
    "@lexical/*": "0.35.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501"
}
